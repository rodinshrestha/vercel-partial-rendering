{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/auth/*": [
        "./src/modules/auth/*"
      ],
      "@/core/*": [
        "./src/modules/core/*"
      ],
      "@/cart/*": [
        "./src/modules/cart/*"
      ],
      "@/checkout/*": [
        "./src/modules/checkout/*"
      ],
      "@/builder/*": [
        "./src/modules/builder/*"
      ],
      "@/product/*": [
        "./src/modules/product/*"
      ],
      "@/wishlist/*": [
        "./src/modules/wishlist/*"
      ],
      "@/search/*": [
        "./src/modules/search/*"
      ],
      "@/category/*": [
        "./src/modules/category/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/order/*": [
        "./src/modules/order/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
